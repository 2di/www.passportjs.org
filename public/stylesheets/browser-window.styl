.browser
  clear both
  width auto
  border-radius 5px
  text-align left
  overflow hidden
  line-height normal
  margin 0 auto

  i
    font-style normal

  .browser-content
    background #f1f1f1
    display block
    border-radius 0 0 5px 5px
    overflow hidden

  .browser-toolbar
    width 100%
    background white
    position relative
    border-radius 3px 3px 0 0
    border-bottom 1px solid rgba(black,.1)
    overflow hidden

  .btns
    position relative
    top 2px
    white-space nowrap
    padding 8px 12px
    margin-left 0
    display inline-block
    +breakpoint("tablet")
      padding 9px 16px
    .close
      background-color #FF5F57
      cursor default
    .min
      background-color #FFBD2E
    .max
      background-color #2ACE42

.browser .btns .close,
.browser .btns .min, .browser .btns .max
  float left
  border-radius(50%)
  margin-right 4px
  opacity 100
  height 10px
  width 10px
  +breakpoint("tablet")
    margin-right 8px
    height 11px
    width 11px

.twitter
  color: #55acee;

.facebook
  color: #3b5998;

.google
  color: #dd4b39;

.linkedin
  color: #0976b4;

.github
  color: #333;

.window
  border-radius 3px
  box-shadow 0 1px 2px rgba(0,0,0,.1)
  background #eee
  overflow hidden
  .window-toolbar
    background white
    border-bottom 1px solid #f1f1f1
    padding 0 4px
    overflow hidden
    i
      background red
      width 12px
      height 12px
      display inline-block
      border-radius 100px
      float left
      margin 9px 8px 0 10px
      margin-right 0

      &.red
        background-color #FF5F57
      &.yellow
        background-color #FFBD2E
      &.green
        background-color #2ACE42

    span
      text-align center
      max-width 150px
      margin auto
      display block
      font-family Menlo
      font-size 12px
      color #444F5E
  .window-content
    font-family Menlo
    color #333
    font-size 12px
    padding 20px
    +breakpoint("tablet")
      font-size 14px
    p
      margin 0
