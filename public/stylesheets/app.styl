@-webkit-keyframes rotateWord {
  0% { opacity: 0; }
  2% { opacity: 0; -webkit-transform: translateY(-30px); }
  5% { opacity: 1; -webkit-transform: translateY(0px);}
  37% { opacity: 1; -webkit-transform: translateY(0px); }
  40% { opacity: 0; -webkit-transform: translateY(30px); }
  100% { opacity: 0; }
}
@keyframes rotateWord {
  0% { opacity: 0; }
  2% { opacity: 0; -webkit-transform: translateY(-30px); transform: translateY(-30px); }
  5% { opacity: 1; -webkit-transform: translateY(0px); transform: translateY(0px);}
  37% { opacity: 1; -webkit-transform: translateY(0px); transform: translateY(0px); }
  40% { opacity: 0; -webkit-transform: translateY(30px); transform: translateY(30px); }
  100% { opacity: 0; }
}