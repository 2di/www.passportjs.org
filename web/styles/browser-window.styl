.browser
  clear both
  width auto
  border-radius 5px
  text-align left
  overflow hidden
  line-height normal
  margin 0 auto

  i
    font-style normal

  .browser-content
    background #f1f1f1
    display block
    border-radius 0 0 5px 5px
    overflow hidden

  .browser-toolbar
    width 100%
    background white
    position relative
    border-radius 3px 3px 0 0
    border-bottom 1px solid rgba(black,.1)
    overflow hidden

  .btns
    position relative
    top 2px
    white-space nowrap
    padding 8px 12px
    margin-left 0
    display inline-block
    +breakpoint("tablet")
      padding 9px 16px
    .close
      background-color #FF5F57
      cursor default
    .min
      background-color #FFBD2E
    .max
      background-color #2ACE42

.browser .btns .close,
.browser .btns .min, .browser .btns .max
  float left
  border-radius(50%)
  margin-right 4px
  opacity 100
  height 10px
  width 10px
  +breakpoint("tablet")
    margin-right 8px
    height 11px
    width 11px
