.search-con
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 99
  background rgba(#121212,.98)
  padding 21px 0 0 0
  display none
  .head
    position fixed
    top 21px
    right 0
    left 0
    height auto
    +breakpoint("tablet")
      top 0
      padding-top 41px
  .close-ico
    position absolute
    top 10px
    right 20px
    background url(../../images/ico_close2.svg)
    background-size 20px 20px
    height 19px
    width 19px
    display block
    cursor pointer
    +breakpoint("tablet")
      background-size auto auto
      top 50px
      right 50px
      height 24px
      width 25px
      opacity 0.8
  h2
    font-size 13px
    color white
    letter-spacing 0.88px
    line-height 22px
    font-weight 700
    text-align center
    display block
    +breakpoint("tablet")
      font-size 16px
      line-height 22px
      padding-bottom 5px

  .hold
    text-align center
  form
    position relative
    display inline-block
    max-width 600px
    padding 0
    margin-left 50px
    +breakpoint("tablet")
      border-bottom 1px solid rgba(white,.1)
      padding 0
    .twitter-typeahead
      &:before
        content ""
        width 48px
        height 48px
        background url(../../images/ico_seach2.svg) no-repeat
        background-size 50%
        position absolute
        display inline-block
        left -30px
        top 17px
        +breakpoint("tablet")
          background-size 100%
          left -70px
          top 20px

    .tt-menu
      display none !important

    .tt-hint, .tt-input
      background none!important
      border none!important
      max-width 360px
      font-size 32px
      min-height 60px
      text-transform lowercase
      padding 0
      margin 0
      +breakpoint("tablet")
        font-size 70px
        -webkit-transition max-width .3s ease-out
        transition max-width .3s ease-out

        &.bigger
          -webkit-transition max-width .3s ease-out
          transition max-width .3s ease-out
          max-width 620px

    .tt-hint
      display block
      color #8d9095
      white-space nowrap

    .tt-input
      color yellow
      position absolute
      top 0
      left 0

      &::-webkit-input-placeholder {
        text-transform initial
        color #8d9095
      }

      &:-moz-placeholder {
        text-transform initial
        color #8d9095
      }

      &::-moz-placeholder {
        text-transform initial
        color #8d9095
      }

      &:-ms-input-placeholder {
        text-transform initial
        color #8d9095
      }

  .info-line
    font-size 12.8px
    color rgba(255,255,255,0.50)
    letter-spacing 0.71px
    line-height 18px
    text-align center
    margin 6px 0 0
    font-weight 500
    +breakpoint("tablet")
      font-size 16px
      line-height 22px
      margin-top 30px

    span
      margin-right 5px

  .results
    overflow-y scroll
    overflow-x hidden
    -webkit-overflow-scrolling touch
    position absolute
    top 180px
    height 100%
    width 100%!important
    +breakpoint("tablet")
      top 283px
      clear both
      grid(2, 0, "article")
    +breakpoint("desktop")
      grid(3, 0, "article")


  section
    text-align center
    padding 0 20px
    max-width 1050px
    margin 0 auto
  article
    margin-bottom 20px
    +breakpoint("tablet")
      padding 0 10px!important
    a
      border 1px solid #4a4f55
      min-height auto
      padding 10px 15px 50px
      position relative
      display block
      box-sizing content-box
      +breakpoint("tablet")
        min-height 140px
      &:hover
        +breakpoint("tablet")
          text-decoration none
          border-color transparent
          background yellow
          span, .stat span
            color #4A4A4A
          .stat
            .download, .star
              background-position 0 6px
          .text
            color rgba(#4A4A4A,.5)
    span
      display block
      text-align left
    .title
      font-size 20px
      color white
      line-height 27px
      padding-bottom 12px
    .text
      line-height 22px
      color #8e9196
    .stat
      position absolute
      bottom 10px
      left 20px
      span
        float left
        color #fff
        padding-left 19px
        font-size 14px
        line-height 30px
        margin-right 25px
      .download
        background url(../../images/ico_download.svg) no-repeat 0 -24px
      .star
        background url(../../images/ico_star.svg) no-repeat 0 -24px

    &.featured a
      border-color: yellow;

      .featured-flag
        position: absolute;
        right: 20px;
        bottom: 10px;
        text-transform: uppercase;
        font-size: 12px;
        font-weight: bold;
        color: yellow;
  