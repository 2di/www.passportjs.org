.docs

  h1
    padding: 0
    margin: 0 0 40px
    font-size: 30px
    font-weight: 400
    line-height: 1
    color: green
    +breakpoint("tablet")
      margin-bottom: 60px
      font-size: 50px

  .grid
    display: grid

  section
    clear: both
    
  section
    div
      vertical-align: top

  p
    display: block
    float: left
    width: 60%
    margin: 0
    padding-right: 20px
    x-vertical-align: bottom
    
  
  ul
    display: block
    x-padding-left: 10px
    x-float: right
