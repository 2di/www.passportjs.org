.docs

  h1
    padding: 0
    margin: 0 0 40px
    font-size: 30px
    font-weight: 400
    line-height: 1
    color: green
    +breakpoint("tablet")
      margin-bottom: 60px
      font-size: 50px
    
  section
    div
      vertical-align: top

  p
    display: inline-block
    width: 60%
    margin: 0 30px 0 0
    vertical-align: top
  
  ul
    display: inline-block
    list-style: square
    
