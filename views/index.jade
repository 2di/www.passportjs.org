extends layout

include mixins

block content
  .main-hold
    .top-site
      .search
        form(action='#')
          input(placeholder='Search for Strategies', type='text')
          button(type='submit')

      .social
        ul
          li.twitter
            a(href='#')
          li.facebook
            a(href='#')
          li.git
            a(href='#')
              span.stat 0
    nav#menu
      a#logo(href='#', title='JH') by Jared Hanson
      .menu-trigger
        span
      .menu-hold
        ul
          li
            a(href='/docs') Documentation
          li
            a(href='#') Features
          li
            a(href='#') Strategies
      .design
        a(href='#')
          | Supported by
          img(src='images/supported_logo.svg', alt='')


    .content
      .home
        h1 Passport
        h2 Simple, unobtrusive authentication for Node.js
        +window("app.js -- vim")
          .rw-wrapper
            .rw-sentence
              p passport.authenticate
                span.rw-words.rw-words-1
                  span ('twitter');
                  span ('facebook');
                  span ('google');

        p Passport is authentication middleware for Node.js. Extremely flexible and modular, Passport can be unobtrusively dropped in to any Express-based web application. A comprehensive set of strategies support authentication using a username and password, Facebook, Twitter, and more.

        .strategies
          p +500 Strategies Now!
          a.btn(href='#') VIEW ALL STRATEGIES

  .cloned-blur
  .search-con
    .head
      span.close-ico
      .hold
        h2 SEARCH FOR STRATEGIES
        form(action='#')
          .input
          span.autocomplete
          input(value='', type='text')
        p.info-line 110 STRATEGIES
    .con-line
    .results
      section

